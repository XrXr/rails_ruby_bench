<script>

graph_data = []
graph_data.push({ name: "One Bar", data: [{x: 0, y: 3.1}, {x:1,
y:3.7}, {x:3, y:4.7}, {x:7, y:0.1}], color: "steelblue" })

//Rickshaw.Series.zeroFill(graph_data);

var wrapper = new Rickshaw.Graph( {
	element: document.getElementById("chart"),
	width: 640,
	height: 480,
	renderer: 'bar',
        series: graph_data
} );

var legend = new Rickshaw.Graph.Legend( {
        element: document.querySelector('#legend'), 
        graph: wrapper
});

wrapper.render();
</script>
